<%- include('../../shared/includes/head', {pageTitle: 'Signup'}) %> 

<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %> 
   <main>
       <h1>Create New Account</h1>
       <% if(inputData.errorMessage) { %>
        <section class="alert">
           <h2>Invalid Input</h2> 
           <p><%= inputData.errorMessage %></p>
        </section>

      <% } %> 
       <form action="/signup" method="POST">
           <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
           <p>
               <label for="email">E-Mail</label>
               <input type="email" id="email" name="email" required value="<%=inputData.email %>">
               
           </p>
           <p>
               <label for="confirm-email">Confirm E-Mail</label>
               <input type="email" id="confirm-email" name="confirm-email" required value="<%=inputData.confirmEmail %>">
               
           </p>
           <p>
               <label for="password">Password</label>
               <input type="password" id="password" name="password" required minlength="6" value="<%=inputData.password %>">
               
           </p>
           <hr>
           <p>
               <label for="fullname">Full Name</label>
               <input type="text" id="fullname" name="fullname" required value="<%=inputData.fullname %>" >
               
           </p>
           <p>
               <label for="street">Street</label>
               <input type="text" id="street" name="street" required value="<%=inputData.street %>" >
               
           </p>
           <p>
               <label for="postalcode">Postal Code</label>
               <input 
               type="text" 
               id="postalcode" 
               name="postalcode" 
               required maxlength="5" 
               value="<%=inputData.postalCode %>">
               
           </p>

           <p>
               <label for="city">City</label>
               <input type="text" id="city" name="city" required value="<%=inputData.city %>">
               
           </p>

           <button class="btn">Create Account</button>
           <p id="switch-form">
               <a href="/login">Login instead</a>
           </p>

       </form>

   </main>

<%- include('../../shared/includes/footer') %> 

